<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_imagen_hotel"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:paddingHorizontal="18dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_nombre_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Nombre del Hotel"/>
                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:drawableTint="@color/Primary"
                        android:drawableLeft="@drawable/vector_cama"/>
                    <TextView
                        android:id="@+id/tv_plazas"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text="xx"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_ciudad_hotel"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Ciudad del hotel"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:drawableTint="@color/Primary"
                        android:background="@drawable/vector_telefono"/>
                    <TextView
                        android:id="@+id/tv_telefono_hotel"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text="2346789242"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>