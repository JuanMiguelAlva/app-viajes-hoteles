<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VueloConfirmado"
    android:padding="60dp"
    android:gravity="center">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_check"/>
    <TextView
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="¡Exitoso!"/>
    <TextView
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Su vuelo ha sido registrado, en la sección 'Mis Vuelos' podrá ver más detalles." />
    <TextView
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:id="@+id/tv_monto"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total a Pagar: PEN XXX"/>
    <TextView
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Le gustaría buscar alojamiento?"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hoteles"
        android:drawableStart="@drawable/ic_baseline_hotel_24"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Hoteles"/>
</LinearLayout>